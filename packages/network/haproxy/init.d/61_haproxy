# start haproxy
#
# runlevels: operations, textmode

  if [ -f /var/config/settings.conf ]; then
    . /var/config/settings.conf
  fi

  HAPROXY="/usr/bin/haproxy"
  HOME="/storage"

  (
      OPTIONS="-f /storage/.config/haproxy.cfg"
      mkdir -p /var/empty
      chmod -R 600 /var/empty
      eval $HAPROXY $OPTIONS
  )&
